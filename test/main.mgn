#!/usr/bin/env mgn
// standard library tests

test := import('test')

runner := {
	std: import('std.test')
	str: import('str.test')
	sort: import('sort.test')
	fmt: import('fmt.test')
}

t := test.new('Magnolia stdlib')

runner.std.run(t)
runner.str.run(t)
runner.sort.run(t)
runner.fmt.run(t)

// only report failed tests
t.failed()

// exit with right code
t.exit()

